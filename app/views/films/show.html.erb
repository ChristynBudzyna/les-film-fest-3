<h1><%= @film.title.capitalize %></h1>

<% if @film.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@film.errors.count, "error") %></h2>

    <ul>
    <% @film.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<div id="content">
  <h3><%= @film.description %></h3>

  <ul class="list">
    <p>Writers:<li><%= @film.writers %></li></p>
    <p>Actors:<li><%= @film.actors %></li></p>
    <p>Director:<li><%= @film.director %></li></p>
  </ul>

</div>

<hr>

<%= link_to 'Leave A Review', "/reviews/new?film_id=#{@film.id}" %>

<%@film.reviews.each do |review|%>

  <h4><%=review.title%></h4>
  <p><%=review.body%></p>
  <h4>Comments</h4>
  <p><% review.comments.each do |comment| %>
    <p>posted by: <%= comment.user.username %></p>
    <p>comment: <%= comment.body %></p>
    <% end %><br>
  <%= link_to 'Leave A Comment On This Review', "/comments/new?review_id=#{review.id}" %>

<%end%>
