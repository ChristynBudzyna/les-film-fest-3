<div>

  <div id='user-name'>
    <h1><%= current_user.username.capitalize %></h1>
    <% if current_user.judge_status == true %>
      <h3> Hey there, judge! </h3>
    <% else %>
    <% end %>
  </div>

  <div id='user-reviews'>
    <h3><%= current_user.username.capitalize %> has reviewed <%= current_user.reviews.count %> films: </h3>
      <ul>
        <% current_user.reviews.each do |review| %>
          <li><%= link_to review.film.title, film_path(review.film) %></li>
      </ul>
      <% end %>
  </div>

    <%= link_to "Category listing", categories_path %>

</div>