<!DOCTYPE html>
<html>
<head>
  <title>LesFilmFest</title>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <header>
    <nav id="user-menu">
      <ul class="list">
      <% if logged_in? %>
        <li><%= link_to 'home', categories_path %></li>
        <li>Welcome, <%= link_to current_user.username.capitalize, user_path(current_user) %></li>
        <li><%= link_to 'log out', logout_path, method: "delete" %></li>
      <% else %>
        <li>home</li>
        <li><%= link_to 'sign up', new_user_path %></li>
        <li><%= link_to 'login', login_path %></li>
      <% end %>
      </ul>
    </nav>

    <nav id="nav-bar">
      <ul class="list">
        <li class="link"><%= link_to %>Reviews</li>
        <li class="link"><% %>Films</li>
        <li class="link"><% %>Films</li>
      </ul>
    </nav>
  </header>



<%= yield %>

</body>
</html>
